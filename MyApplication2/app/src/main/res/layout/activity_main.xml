<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="129dp"
            android:layout_height="26dp"
            android:id="@+id/emailid" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="109dp"
            android:hint="enter your \email id" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="118dp" android:layout_marginRight="118dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="176dp"
            android:layout_marginStart="176dp"/>
    <EditText
            android:layout_width="129dp"
            android:layout_height="39dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editText"
            android:hint="enter password" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="109dp"
            android:layout_marginRight="109dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="173dp" android:layout_marginStart="173dp" android:layout_marginTop="23dp"
            app:layout_constraintTop_toBottomOf="@+id/emailid"/>
    <Button
            android:text="SUBMIT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/submit" android:layout_marginTop="52dp"
            app:layout_constraintTop_toBottomOf="@+id/editText" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="192dp" android:layout_marginStart="192dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="131dp"
            android:layout_marginRight="131dp" android:onClick="clickfunction"/>

</androidx.constraintlayout.widget.ConstraintLayout>